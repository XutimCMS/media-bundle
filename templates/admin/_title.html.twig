<div class="d-flex align-items-center gap-3" id="page-title-wrapper">
    <h1 class="page-title mb-0">
        {{ 'Media'|trans({}, 'admin') }}
        {% if currentFolder %}
            - {{ currentFolder.name() }}
        {% endif %}
    </h1>
    {% if currentFolder %}
        <a
            href="{{ admin_path('admin_media_folder_edit', {id: currentFolder.id()}) }}"
            data-turbo-frame="modal"
            aria-label="{{ 'Edit folder'|trans({}, 'admin') }}"
            class="text-primary"
        >
            <twig:Xutim:Admin:Icon name="edit" />
        </a>
        {% if currentFolder.children() is empty and currentFolder.media() is empty %}
            <a
                href="{{ admin_path('admin_media_folder_delete', {id: currentFolder.id()}) }}"
                data-turbo-frame="modal"
                aria-label="{{ 'Delete folder'|trans({}, 'admin') }}"
                class="text-danger"
            >
                <twig:Xutim:Admin:Icon name="trash" />
            </a>
        {% endif %}
    {% endif %}
</div>
