{% extends '@XutimCore/admin/modalBase.html.twig' %}

{% set title = 'Edit folder'|trans({}, 'admin') %}

{% block pageTitle %}
    {{ title }}
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">{{ title }}</h3>
        </div>
        <div class="card-body">
            {{ form(form) }}
        </div>
    </div>
{% endblock %}

{% block stream_success %}
    <turbo-stream action="replace" target="page-title-wrapper">
        <template>
            {{ include('@XutimMedia/admin/_title.html.twig', {
                currentFolder: folder
            }) }}
        </template>
    </turbo-stream>
    <turbo-stream action="replace" target="folder-{{ folder.id }}">
        <template>
            {{ include('@XutimMedia/admin/_folder_card.html.twig', {folder: folder}) }}
        </template>
    </turbo-stream>
{% endblock %}
