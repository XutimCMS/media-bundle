{% if this.hasVariants %}
    <picture>
        {% if this.avifSrcset %}
            <source srcset="{{ this.avifSrcset }}" sizes="{{ this.sizes }}" type="image/avif">
        {% endif %}
        {% if this.webpSrcset %}
            <source srcset="{{ this.webpSrcset }}" sizes="{{ this.sizes }}" type="image/webp">
        {% endif %}
        <img
            {{ attributes }}
            src="{{ this.fallbackUrl }}"
            {% if this.jpgSrcset %}srcset="{{ this.jpgSrcset }}"{% endif %}
            sizes="{{ this.sizes }}"
            alt="{{ this.alt }}"
            loading="{{ this.loading }}"
            {% if this.class %}class="{{ this.class }}"{% endif %}
            {% if this.blurHash %}data-blurhash="{{ this.blurHash }}"{% endif %}
        >
    </picture>
{% else %}
    <div {{ attributes }} {% if this.class %}class="{{ this.class }}"{% endif %}
        style="aspect-ratio: 1; min-height: 120px; display: flex; align-items: center; justify-content: center; background: var(--tblr-bg-surface-secondary, #f1f5f9);"
    >
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" style="opacity: 0.3;">
            <path d="M15 8h.01"/><path d="M3 6a3 3 0 0 1 3 -3h12a3 3 0 0 1 3 3v12a3 3 0 0 1 -3 3h-12a3 3 0 0 1 -3 -3v-12z"/><path d="M3 16l5 -5c.928 -.893 2.072 -.893 3 0l5 5"/><path d="M14 14l1 -1c.928 -.893 2.072 -.893 3 0l3 3"/>
        </svg>
    </div>
{% endif %}
